<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

        <CheckBox
            android:id="@+id/check_box_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"/>

        <TextView
            android:id="@+id/title_task"
            android:autoSizeTextType="uniform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title task"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:layout_alignTop="@+id/check_box_task"
            android:layout_alignBottom="@+id/check_box_task"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/check_box_task"
            android:maxLines="1"
            android:ellipsize="end">
        </TextView>


        <TextView
            android:layout_marginTop="2dp"
            android:autoSizeMaxTextSize="34dp"
            android:id="@+id/task_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text task"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_below="@+id/title_task"
            android:layout_toEndOf="@+id/check_box_task"
            android:layout_toStartOf="@+id/priority_label"
            android:maxLines="2"
            android:ellipsize="end">
        </TextView>


        <ImageView
            android:id="@+id/priority_label"
            android:src="@drawable/ic_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>